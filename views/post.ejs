<%- include("partials/header")-%>
<br><br>
<div class="container" style="height: 100%">
<div class="row">
  <div class="col-md-8">
    <h1 style="color:rgb(15, 230, 158) ; text-align: left;" data-aos="fade-right" data-aos-delay="100" data-aos-duration="800" ><%= title %></h1>

    <br>
    
    <img style="text-align: left;" src="<%= imgBlog %>" alt="blog-head-img" height="auto" width="80%">
    
    <br><br>
    <p style="text-align: left;" ><%= body %></p>  
    <br>
  </div>

<div class="col-md-4 trending-col">
  <center><h3  class="animate__animated animate__pulse animate__infinite post-h post-h-light">CHECK THESE OUT</h3></center>
  <br>
  <div class="trending-box" >
    <%for(i=0;i<posts.length;i++){%>
      <%  if( title  !=  posts[i].title){  %>
  <div class="card-trending-blogs" style="background-image: url(<%= posts[i].img %>) ; ">
    <h2  ><%= posts[i].title %></h2>

  <p  ><%= posts[i].body.substring(0,120)+" ..."%>
    <a href="/posts/<%=posts[i]._id%>">Read more</a></p>
  </div>
  <br>
  <%}else{continue;}%>
<%}%>
</div>
</div>

</div>


</div>
<div class="footer">
    
  <p>Made by Arjav Parekh & Aryan Ringshia</p>
  <br>
  <form action="/login" method="GET"><button class="btn btn-primary " >LOGOUT</button></form>
</div>


